<!DOCTYPE html>
<html>
  <head>
    <style>
      table {
        border-collapse: collapse;
      }
      table,
      th,
      td {
        border: 1px solid black;
      }
    </style>
  </head>
  <body>
    <div style="width: 85%; margin: 0 7.5%">
      <div style="text-align: center; padding-left: 50px">
        <h3><%= hours[0].user.username %>'s working hours</h3>
        <p style="margin: auto">Printed on: <%= new Date().toLocaleDateString() %></p>

        <table style="margin: auto">
          <thead>
            <tr>
              <th>Date</th>
              <th>Hour</th>
            </tr>
          </thead>
          <% hours.forEach(hour => { %>
          <tr>
            <td><%=new Date(hour.createdAt).toLocaleDateString() %></td>
            <td><%= hour.hours %></td>
          </tr>
          <% }); %>
          <tr>
            <td>Total:</td>

            <td><%= total %></td>
          </tr>
        </table>
      </div>
    </div>
    <div></div>
  </body>
</html>
